{
    "info": {
        "_postman_id": "documents-collection",
        "name": "04 - Documents Module",
        "description": "Endpoints para la gestión de documentos comerciales",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "item": [
        {
            "name": "Digital Certificates",
            "item": [
                {
                    "name": "List Certificates",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json",
                                "type": "text"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/documents/certificates",
                            "host": ["{{base_url}}"],
                            "path": ["api", "documents", "certificates"]
                        }
                    }
                },
                {
                    "name": "Upload Certificate",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Accept",
                                "value": "application/json",
                                "type": "text"
                            },
                            {
                                "key": "Authorization",
                                "value": "Bearer {{token}}",
                                "type": "text"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "certificate",
                                    "type": "file",
                                    "src": "/path/to/certificate.p12"
                                },
                                {
                                    "key": "password",
                                    "value": "certificate_password",
                                    "type": "text"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{base_url}}/api/documents/certificates",
                            "host": ["{{base_url}}"],
                            "path": ["api", "documents", "certificates"]
                        }
                    }
                }
            ]
        },
